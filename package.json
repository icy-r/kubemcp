{
  "name": "kubemcp",
  "version": "1.1.3",
  "description": "MCP server for managing MicroK8s clusters via Cursor IDE",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "kubemcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icy-r/kubemcp.git"
  },
  "bugs": {
    "url": "https://github.com/icy-r/kubemcp/issues"
  },
  "homepage": "https://github.com/icy-r/kubemcp#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "kubernetes",
    "microk8s",
    "cursor",
    "model-context-protocol"
  ],
  "author": "icy-r <asath12882@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.22.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@toon-format/toon": "^0.7.0",
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}